<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
   <View 
       android:layout_width="match_parent"
       android:layout_height="0dip"
       android:layout_weight="3"
       android:background="@null"
       /> 
   <TableLayout 
       android:layout_width="match_parent"
       android:layout_height="0dip"
       android:layout_weight="6"
       >
       <RadioGroup 
           android:layout_width="match_parent"
           android:layout_height="0dip"
           android:layout_weight="1"
           android:orientation="horizontal"
           >
               <RadioButton 
                   android:id="@+id/pixel_button"
                   android:text="@string/pixel_button"
                   android:layout_width="0dip"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   style="@style/function_button"
                   android:layout_marginLeft="5dp"
                   />
               <Space 
                   android:layout_width="0dip"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   />
               <RadioButton 
                   android:id="@+id/ldpi_button"
                   android:text="@string/ldpi_button"
                   android:layout_width="0dip"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   style="@style/function_button"
                   android:layout_marginRight="10dp"
                   />
               <RadioButton 
                   android:id="@+id/hdpi_button"
                   android:text="@string/hdpi_button"
                   android:layout_width="0dip"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   style="@style/function_button"
                   android:layout_marginRight="10dp"
                   />
               <RadioButton 
                   android:id="@+id/xhdpi_button"
                   android:text="@string/xhdpi_button"
                   android:layout_width="0dip"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   style="@style/function_button"
                   android:layout_marginRight="5dp"
                   />
               </RadioGroup>
       <TableRow 
           android:layout_width="match_parent"
           android:layout_height="0dip"
           android:layout_weight="1"
           >
           <Button 
               android:layout_width="0dip"
               android:layout_height="match_parent"
               android:layout_weight="1"
               style="@style/dpicalculator_button"
               />
           <Button 
               android:layout_width="0dip"
               android:layout_height="match_parent"
               android:layout_weight="1"
               style="@style/dpicalculator_button"
               />
           <Button 
               android:layout_width="0dip"
               android:layout_height="match_parent"
               android:layout_weight="1"
               style="@style/dpicalculator_button"
               />
       </TableRow>
       <TableRow 
           android:layout_width="match_parent"
           android:layout_height="0dip"
           android:layout_weight="1"
           >
           <Button 
               android:layout_width="0dip"
               android:layout_height="match_parent"
               android:layout_weight="1"
               style="@style/dpicalculator_button"
               />
           <Button 
               android:layout_width="0dip"
               android:layout_height="match_parent"
               android:layout_weight="1"
               style="@style/dpicalculator_button"
               />
           <Button 
               android:layout_width="0dip"
               android:layout_height="match_parent"
               android:layout_weight="1"
               style="@style/dpicalculator_button"
               />
       </TableRow>
       <TableRow 
           android:layout_width="match_parent"
           android:layout_height="0dip"
           android:layout_weight="1"
           >
           <Button 
               android:layout_width="0dip"
               android:layout_height="match_parent"
               android:layout_weight="1"
               style="@style/dpicalculator_button"
               />
           <Button 
               android:layout_width="0dip"
               android:layout_height="match_parent"
               android:layout_weight="1"
               style="@style/dpicalculator_button"
               />
           <Button 
               android:layout_width="0dip"
               android:layout_height="match_parent"
               android:layout_weight="1"
               style="@style/dpicalculator_button"
               />
       </TableRow>
   </TableLayout>     
</LinearLayout>